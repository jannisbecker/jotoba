kanji = { HAN }
kana  = { (HIRAGANA | KATAKANA) }

kanji_str = { kanji+ }
kana_str  = { kana+ }

reading = { "|" ~ (kana_str) }

furi_group_single = { "[" ~ (kanji_str) ~ (reading) ~ "]" }
furi_group_multi  = { "[" ~ (kanji_str) ~ (reading)+ ~ "]" }

parser = { (furi_group_single | furi_group_multi | kana_str)+ }
